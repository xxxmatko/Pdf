@model List<RazorPdf.Models.Employee>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RazorPdf</title>
    <style>
        body {
            font-family: "Roboto";
            font-size: 12px;
        }

        h1 {
            text-align: center;
        }

        a {
            color: #8b0000;
        }
    </style>
</head>
<body>
    <h1>List of Employees</h1>
    @foreach (var emp in Model)
    {
        <p>
            <b>@emp.Name</b> (@emp.Id)
            <br/>
            <a href="mailto:@emp.Email">@emp.Email</a>
        </p>
    }
</body>
</html>
